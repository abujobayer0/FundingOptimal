# Database Configuration
MONGODB_URI=mongodb://localhost:27017/fundingoptimal

# JWT Configuration (REQUIRED FOR PRODUCTION)
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-different-from-jwt-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# JWT Issuer/Audience (Optional - improves security)
JWT_ISSUER=fundingoptimal
JWT_AUDIENCE=fundingoptimal-users

# Cookie Configuration
COOKIE_DOMAIN=
# For production with subdomains, set to: .yourdomain.com
# For production single domain, set to: yourdomain.com
# Leave empty for localhost/development

# Force secure cookies (optional)
FORCE_SECURE_COOKIES=false

# Environment
NODE_ENV=development

# Application URLs (for redirects and CORS)
NEXTAUTH_URL=http://localhost:3000
# In production: https://yourdomain.com

# CORS Configuration (if needed)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# In production: https://yourdomain.com,https://www.yourdomain.com 